package com.stackroute.controller;

import org.springframework.stereotype.Controller;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.servlet.ModelAndView;

import com.stackroute.model.Login;
import com.stackroute.model.*;

@Controller
public class HomeController {
 @RequestMapping(path="/",method=RequestMethod.GET)
 public ModelAndView login() {
	 ModelAndView mv=new ModelAndView("login","loginObj",new Login());
	 return mv;
	 
 }
 @RequestMapping(path="/logincheck",method=RequestMethod.GET)
 public String logincheck() {
	 return "logincheck";
 }
	 
 
 @RequestMapping(path="/homepage",method=RequestMethod.GET)
 public String homepage() {
	 return "homepage";
	 
 }

 @RequestMapping(path="/registration",method=RequestMethod.GET)
 public ModelAndView registration() {
	 ModelAndView regis=new ModelAndView("registration","regObj", new registration());
	 return regis;
	 }


 @RequestMapping(path="/incorrect",method=RequestMethod.GET)
 public String incorrecr() {
	 return "incorrect";
	 
 }
}
